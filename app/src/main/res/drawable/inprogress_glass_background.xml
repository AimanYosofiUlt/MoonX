<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80324D76" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#4DFFFFFF"
                android:endColor="#1AFFFFFF"
                android:startColor="#1AFFFFFF" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#4DFFFFFF"
                android:endColor="#1AFFFFFF"
                android:angle="45"
                android:startColor="#1AFFFFFF" />
        </shape>
    </item>
</layer-list>