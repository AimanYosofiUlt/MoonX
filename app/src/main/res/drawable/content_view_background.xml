<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#6600ADEF" android:centerColor="@color/white"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#33334054" android:angle="45" android:centerColor="@color/white"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#33BBECFF" android:angle="90" android:centerColor="@color/white"/>
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>