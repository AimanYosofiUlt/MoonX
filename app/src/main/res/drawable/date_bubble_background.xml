<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#4D00ADEF"
                android:endColor="#8000ADEF"
                android:startColor="#1A00ADEF" />
            <corners android:radius="20dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-45"
                android:centerColor="#8000ADEF"
                android:endColor="#6600ADEF"
                android:startColor="#1A00ADEF" />
            <corners android:radius="20dp" />

        </shape>
    </item>
</layer-list>