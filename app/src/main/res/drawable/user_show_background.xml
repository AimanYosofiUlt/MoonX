<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true" android:drawable="@drawable/user_show_background_inclick"/>
            <item android:drawable="@drawable/user_show_background_outclick"/>
        </selector>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:centerColor="#4DFFFFFF"
                android:endColor="#1AFFFFFF"
                android:startColor="#1A00ADEF" />
            <corners android:radius="5dp" />

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="-45"
                android:centerColor="#4DFFFFFF"
                android:endColor="#1AFFFFFF"
                android:startColor="#1A00ADEF" />
            <corners android:radius="5dp" />

        </shape>
    </item>
</layer-list>